          <argument>
            <kind>1</kind>
            <string>/// Draw our minimap

display_set_gui_size(view_wport, view_hport);

draw_set_font(font_small);

// First, fill in our surface:

if (!surface_exists(_mapSurface)) {
    _mapSurface = surface_create(128, 128);
}

var surfWidth = surface_get_width(_mapSurface);
var surfHeight = surface_get_height(_mapSurface);

surface_set_target(_mapSurface);
draw_clear(c_black);

// Player at the center
draw_sprite_ext(sprMinimapPlayer, 0, surfWidth / 2, surfHeight / 2, 1, 1, objShip.image_angle, c_white, 1);

// Now draw the planets!
var planets = get_planets();
for(var i = 0; i &lt; ds_list_size(planets); i++) {
    var planet = planets[| i];

    // Delta x in minimap pixels of player
    var dx = surfWidth * (planet.x - objShip.x) / _mapSize;
    var dy = surfHeight * (planet.y - objShip.y) / _mapSize;

    var planetScale = surfWidth * (2 * planet._radius / sprite_get_width(sprMinimapPlanet)) / _mapSize;

    var planetX = dx + surfWidth / 2;
    var planetY = dy + surfHeight / 2;
    draw_sprite_ext(sprMinimapPlanet, planet._planetStatus, planetX, planetY, planetScale, planetScale, 0, c_white, 1);
    // Draw the planet's name!
    draw_set_color(c_white);
    draw_set_halign(fa_center);
    draw_text(planetX, planetY + 8, planet._name);
    draw_set_halign(fa_left);
}

// Goo drawing

var gx = surfWidth *  (objGooSystem._gooOriginX - objShip.x) / _mapSize  + surfWidth / 2;
var gy = surfHeight * (objGooSystem._gooOriginY - objShip.y) / _mapSize  + surfHeight / 2;
var gr = surfWidth * objGooSystem._gooRadius / _mapSize;
draw_sprite(sprMinimapGooOrigin, 0, gx, gy);
draw_set_color(c_red);
//draw_text(gx + 6, gy, "Ground Zero");

draw_ellipse(gx - gr, gy - gr, gx + gr, gy + gr, true);

// Draw enemies
with(objEnemy) {
    var ex = surfWidth * (x - objShip.x) / other._mapSize + surfWidth / 2;
    var ey = surfHeight * (y - objShip.y) / other._mapSize + surfHeight / 2;
    draw_sprite_ext(sprMinimapEnemy, 0, ex, ey, 1, 1, image_angle, c_white, 1);
}

surface_reset_target();

// Now draw the actual surface with the window!
draw_surface(_mapSurface, view_wport - 128 - 8, view_hport - 128 - 8);
draw_sprite_ext(sprMinimapWindow, 0, view_wport - 128 - 8, view_hport - 128 - 8, 2, 2, 0, c_white, 1);
</string>
